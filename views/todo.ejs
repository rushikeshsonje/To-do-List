<%- include("header") -%>
  <%- include('navigation') -%>

  <% if (task.length> 0) { %>
  <div class="box">
    <h3 class="mt-3">To-Do List</h3>
  <div class="item1">
      <table class="table">
        <thead>
          <tr>
            <th scope="col"></th>
            <th scope="col">Task Name</th>
          </tr>
        </thead>
        <tbody>
          <% task.forEach((item)=> { %>
              <tr>
               <form action="/delete" method="post">
                  <input type="hidden" name="userId" value="<%= user._id %>">
                  <td><input type="checkbox" name="checkbox" value=<%=item._id %> onChange="this.form.submit()"></td>
                  <td><%= item.taskName %></td>
                </tr>
              </form>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
  <% } %>
    <% if (meet.length> 0) { %>
      <div class="box">
        <h3 class="mt-3">To-Do List</h3>
      <div class="item1">
          <table class="table">
            <thead>
              <tr>
                <th scope="col"></th>
                <th scope="col">Meet Name</th>
                <th scope="col">Meet Time</th>
                <th scope="col">Time Remaining</th>
              </tr>
            </thead>
            <tbody>
              <% meet.forEach((item, index)=> { %>
                  <tr>
                    <form action="/deleteMeet" method="post">
                      <input type="hidden" name="userId" value="<%= user._id %>">
                      <td> <input type="checkbox" name="checkbox" value=<%=item._id %> onChange="this.form.submit()"></td>
                    </form>
                    <td><%= item.meetName %></td>
                    <td><%= item.date %></td>
                    <td><%= countTime[index] %></td>
                  </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
      <% } %>
    <%- include("footer") -%>